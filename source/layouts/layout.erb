<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/favicon.png' %>
  </head>
  <body>
    <div class="navbar-wagon">
      <!-- Logo -->
      <a href="/" class="navbar-wagon-brand">
        <img src="images/logo.png" alt="logo">
      </a>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">

        <a href="contact.html" class="navbar-wagon-item navbar-wagon-link">Contact</a>
        <a href="contact.html" class="navbar-wagon-item navbar-wagon-link">Tarif</a>
        <a href="about.html" class="navbar-wagon-item navbar-wagon-link">Équipe</a>
      <!-- Dropdown appearing on mobile only -->
      </div>

      <div class="navbar-wagon-item visible-xs">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">Contact</a></li>
            <li><a href="#">Tarif</a></li>
            <li><a href="#">Équipe</a></li>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
